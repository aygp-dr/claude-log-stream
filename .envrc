#!/usr/bin/env bash
# Project environment configuration for claude-log-stream

# Project identification
export PROJECT_NAME="claude-log-stream"
export PROJECT_ROOT="$(pwd)"

# Clojure environment
export CLJ_CONFIG="${HOME}/.clojure"
export JAVA_OPTS="-Xmx2g -XX:+UseG1GC"

# Development tools
export EDITOR="emacs"
export TMUX_SESSION="${PROJECT_NAME}"

# Emacs configuration
export EMACS_CONFIG="${PROJECT_ROOT}/${PROJECT_NAME}.el"

# Path configuration
PATH_add "${PROJECT_ROOT}/bin"

# Development helpers
alias repl="clojure -M:dev:repl"
alias test="make test"
alias tmux-dev="make tmux-dev"
alias analyze="make analyze-project"

# Log directories
export CLAUDE_LOG_DIR="${HOME}/.claude/projects/$(pwd | tr '/' '-')"

echo "Project: ${PROJECT_NAME}"
echo "Root: ${PROJECT_ROOT}"
echo "Tmux session: ${TMUX_SESSION}"
echo "Use 'make tmux-dev' to start development environment"